{
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.12",
    "concurrently": "^9.2.1",
    "tailwindcss": "^4.1.12"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:css\"",
    "dev:server": "uv run manage.py runserver",
    "dev:css": "tailwindcss -i ./static/css/_style.css -o ./static/css/style.css --watch",
    "static": "uv run manage.py collectstatic --noinput",
    "build": "npm run build:css && uv run manage.py collectstatic --noinput",
    "build:css": "tailwindcss -i ./static/css/_style.css -o ./static/css/style.css --minify",
    "migrate": "uv run manage.py migrate",
    "makemigrations": "uv run manage.py makemigrations",
    "createsuperuser": "uv run manage.py createsuperuser"
  },
  "dependencies": {
    "flowbite": "^3.1.2"
  }
}